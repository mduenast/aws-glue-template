<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>dist</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../aws-glue-launcher</directory>
            <outputDirectory>./aws-glue-launcher</outputDirectory>
            <includes>
                <include>launcher/*ApplicationLauncher.scala</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../aws-glue-resources</directory>
            <outputDirectory>./aws-glue-resources</outputDirectory>
            <includes>
                <include>resources/**/*</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>./aws-glue</outputDirectory>
            <includes>
                <include>com.mduenast:aws-glue</include>
            </includes>
        </dependencySet>
    </dependencySets>


</assembly>